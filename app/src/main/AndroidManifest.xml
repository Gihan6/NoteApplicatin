<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creativematrix.noteapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"

        >
        <activity android:name=".activities.PendingTaskActivity"
            android:launchMode= "singleInstance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"

            ></activity>
        <activity android:name=".activities.SelectTaskCoinActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"

            />
        <activity android:name=".activities.BeforeLoginActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>
        <activity android:name=".activities.UserLoginRegisterActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>

        <service android:name=".services.FloatingService"
            />
        <service android:name=".services.RecordingService" />
        <service android:name=".services.FloatingViewService" />

        <activity android:name=".activities.CompanyLoginRegisterActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SplachScreen"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.VerificationActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SelectTaskStatusActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SelectTaskOwnersActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SelectGroupActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SelectProjectActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AddTaskActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.NoteHomeActivity"
            android:windowSoftInputMode="adjustResize"

            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.HomeActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
    </application>

</manifest>